pipeline {
    agent any

    environment {
        REMOTE_USER = 'ec2-user'  // Replace with your EC2 instance user
        REMOTE_HOST = 'your-ec2-instance-public-dns'  // Replace with your EC2 instance public DNS or IP
        SSH_KEY = credentials('your-ssh-key-id')  // Replace with your Jenkins SSH key ID
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://your-git-repo-url'  // Replace with your Git repository URL
            }
        }

        stage('Copy Python Script to EC2') {
            steps {
                sshagent (credentials: [SSH_KEY]) {
                    sh """
                        scp -o StrictHostKeyChecking=no hello.py ${REMOTE_USER}@${REMOTE_HOST}:/home/${REMOTE_USER}/
                        
                    """
                }
            }
        }

        stage('Execute Python Script on EC2') {
            steps {
                sshagent (credentials: [SSH_KEY]) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${REMOTE_HOST} 'python3 /home/${REMOTE_USER}/hello.py'
                        
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
